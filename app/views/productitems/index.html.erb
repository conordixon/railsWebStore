<p id="notice"><%= notice %></p>

<h1>ProductItems</h1>

<table>
  <thead>
  <tr>
    <th>Productname</th>
    <th>Description</th>
    <th>Price</th>
    <th>Brand</th>
    <th colspan="3"></th>
  </tr>
  </thead>
</table>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productitem.each do |productitem| %>
      <tr>
        <% if productitem.productimage_url %>
        <td><%= image_tag productitem.productimage_url(:thumb) %></td>
        <td><%= productitem.productname %></td>
        <td><%= productitem.description %></td>
        <td><%= productitem.price %></td>
        <td><%= productitem.brand %></td>
        <% end %>
        <% if user_signed_in? %>
        <td><%= link_to 'Show', productitem %></td>
        <% end %>
        <% if user_admin %>
        <td><%= link_to 'Edit', edit_productitem_path(productitem)%></td>
        <td><%= link_to 'Destroy', productitem, method: :delete, data: { confirm: 'Are you sure?' }%></td>
        <% end %>
        <% if user_signed_in? %>
        <td><a href="/cart/<%= productitem.id %>" class="button">Add To Cart</a></td>
        <% end %>
      </tr>
      <% end %>
      <ul>
      <% if user_admin %>
      <li><%= link_to 'New Product Item', new_productitem_path %></li>
      <% end %>
      </ul>
  </tbody>
</table>
<br>
<%= link_to "Home", "home#index" %>