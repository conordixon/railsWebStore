<p id="notice"><%= notice %></p>

<% if @productitem.productimage_url %>
  <%= image_tag @productitem.productimage_url(:medium) %>
<% end %>

<p>
  <strong>Product Name:</strong>
  <%= @productitem.productname %>
</p>

<p>
  <strong>Description:</strong>
  <%= @productitem.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @productitem.price %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @productitem.brand %>
</p>
<% if user_signed_in? %>
<td><a href="/cart/<%= @productitem.id %>" class="button">Add To Cart</a></td>
<% end %>
<% if user_admin %>
<%= link_to 'Edit', edit_productitem_path(@productitem) %> |
<% end %>
<%= link_to 'Back', productitems_path %>